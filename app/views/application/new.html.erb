<h1 class="text-3xl block">Create new Todo</h1>

<%= form_with model: @todos do |form| %>
  <div class="mt-2">
    <%= form.label :title %><br>
    <%= form.text_field :title %>

    <% @todo.errors.full_messages_for(:title).each do |message| %>
      <div class="mt-4 bg-red-500 text-white p-4 rounded-md w-52"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-2">
    <%= form.label :done %><br>
    <%= form.check_box :done %>

    <% @todo.errors.full_messages_for(:done).each do |message| %>
      <div class="mt-4 bg-red-500 text-white p-4 rounded-md w-52"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-2">
    <%= form.label :due_date %><br>
    <%= form.datetime_field :due_date %>

    <% @todo.errors.full_messages_for(:due_date).each do |message| %>
      <div class="mt-4 bg-red-500 text-white p-4 rounded-md w-52"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-2 flex">
    <%= link_to 'Back', { action: 'index', controller: "application"}, class: 'py-2 px-4 bg-blue-500 text-white mr-4 rounded-md cursor-pointer' %>

    <%= form.submit "Create", class: 'py-2 px-4 bg-blue-500 text-white cursor-pointer rounded-md cursor-pointer' %>
  </div>
<% end %>