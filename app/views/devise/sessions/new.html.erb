<%= render "devise/shared/layout", layout: 'box' do %>
  <h1 class="text-2xl font-semibold mb-4">Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class:"block text-gray-600" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class:"block text-gray-600" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class:"text-blue-500" %>
        <%= f.label :remember_me, class: "text-gray-600 ml-2" %>
      </div>
    <% end %>

    <div class="flex">
      <%= f.submit "Log in", class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded h-10 mr-2 cursor-pointer' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>
