<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: 'mt-2 bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded h-10 mr-2', "data-turbo-action" => "replace" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded h-10 mr-2', "data-turbo-action" => "replace" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%
=begin%>
 <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded mr-2' %><br /> 
<%
=end%>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%
=begin%>
 <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'mt-2 bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded' %><br /> 
<%
=end%>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
